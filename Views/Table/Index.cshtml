@using TheSocialCebu_Capstone.Models
@model List<Table>

@{
    ViewData["Title"] = "Tables";
}

<h2>Tables</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Table</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Table Number</th>
            <th>Location</th>
            <th>QR Code</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TableNumber</td>
                <td>@item.Location?.LocationName</td>
                <td>
                    @if (item.QrcodeImage != null)
                    {
                        var base64 = Convert.ToBase64String(item.QrcodeImage);
                        <img src="data:image/png;base64,@base64" width="100" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

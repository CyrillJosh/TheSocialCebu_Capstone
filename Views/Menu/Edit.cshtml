@using TheSocialCebu_Capstone.ViewModels
@model ProductVM

@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProdId" />

    <div class="form-group">
        <label asp-for="ProdName"></label>
        <input asp-for="ProdName" class="form-control" />
        <span asp-validation-for="ProdName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="Model.Categories"></select>
    </div>
    <div class="form-group">
        <label asp-for="SubcategoryId"></label>
        <select asp-for="SubcategoryId" class="form-control" asp-items="Model.Subcategories"></select>
    </div>
    <div class="form-group">
        <label asp-for="Availability"></label>
        <input asp-for="Availability" type="checkbox" />
    </div>
    <div class="form-group">
        <label asp-for="UploadImage">Change Image</label>
        <input asp-for="UploadImage" type="file" onchange="previewImage(this)" class="form-control" />
        @if (Model.ExistingImage != null)
        {
            <p>Current Image:</p>
            <img id="imagePreview" src="@("data:image;base64," + Convert.ToBase64String(Model.ExistingImage))" width="100" />
        }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
@* Display selected Image *@
    <script>
        function previewImage(input) {
            const preview = document.getElementById("imagePreview");
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = "block";
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}

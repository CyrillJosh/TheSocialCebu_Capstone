@using TheSocialCebu_Capstone.Models
@model List<Product>

@{
    ViewData["Title"] = "Product List";
}

<h2>Product List</h2>
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Availability</th>
            <th>Category</th>
            <th>Subcategory</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.ProdImage != null)
                    {
                        <img src="@("data:image;base64," + Convert.ToBase64String(item.ProdImage))" width="60" />
                    }
                </td>
                <td>@item.ProdName</td>
                <td>@item.Price.ToString("C")</td>
                <td>@(item.Availability ? "Yes" : "No")</td>
                <td>@item.Category.CategoryName</td>
                <td>@item.Subcategory.SubcategoryName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProdId">Edit</a> |
                    <button data-id="@item.ProdId" data-name="@item.ProdName" data-bs-toggle="modal" data-bs-target="#DeleteModal" class="DeleteProduct">Delete</button>
                </td>
            </tr>
        }
    </tbody>

</table>

@* Modal *@
<form asp-action="Delete" method="post">
    <div class="modal fade" id="DeleteModal" tabindex="-1" aria-labelledby="DeleteModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Confirm Deletion</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="ModalBody">
                    Are you sure you want to delete this item? <span id="Item"></span>
                </div>
                <input type="hidden" name="id" id="DeleteIdInput" />
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(document).on('click', '.DeleteProduct', onDeleteProductClick);

            function onDeleteProductClick() {
                const productId = $(this).data("id");
                const productName = $(this).data("name");

                $('#Item').text(productName);
                $('#DeleteIdInput').val(productId);

                console.log("Deleting product with ID:", productId, "and Name:", productName);
            }
        });
    </script>
}